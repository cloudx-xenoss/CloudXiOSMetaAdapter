Pod::Spec.new do |s|
  s.name         = "CloudXMetaAdapter"
  s.version      = "1.0.0"
  s.summary      = "Mobile SDK for CloudX iOS Meta Adapter"
  s.description  = "CloudX iOS SDK add on for Meta bidder"
  s.homepage     = "https://github.com/cloudx-xenoss/CloudXiOSMetaAdapter"
  s.authors      = { "CloudX" => "support@cloudx.com" }
  s.license      = { :type => "Proprietary", :text => "Copyright 2024 CloudX, Inc. All rights reserved." }

  s.platform     = :ios, "13.0"
  s.swift_version = "5.0"
  s.module_name  = "CloudXMetaAdapter"

  s.source       = {
    :http => "https://github.com/cloudx-xenoss/CloudXiOSMetaAdapter/releases/download/1.0.0/CloudXMetaAdapter.xcframework.zip",
    :type => "zip",
    :flatten => false
  }

  s.vendored_frameworks = "CloudXMetaAdapter.xcframework"

  s.dependencies = {
    "CloudXCore" => ">= 1.0.0"
  }

  s.frameworks = [
    "AVFoundation",
    "AVKit",
    "AdSupport",
    "CoreGraphics",
    "CoreLocation",
    "CoreTelephony",
    "Foundation",
    "StoreKit",
    "SystemConfiguration",
    "UIKit"
  ]

  s.weak_frameworks = [
    "Combine",
    "CryptoKit",
    "SafariServices",
    "SwiftUI",
    "WebKit"
  ]

  s.pod_target_xcconfig = {
    "EXCLUDED_ARCHS[sdk=iphonesimulator*]" => "arm64"
  }

  s.user_target_xcconfig = {
    "OTHER_LDFLAGS" => "-ObjC"
  }
end
